{
  "compilerOptions": {
    "allowJs": false,
    "allowSyntheticDefaultImports": true,
    "declaration": true,
    "declarationMap": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "baseUrl": "./",
    "jsx": "react-native",
    "lib": ["dom", "es7"],
    "composite": true,
    "module": "es2015",
    "moduleResolution": "node",
    "noImplicitAny": false,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "paths": {
      "/": ["./"],
      "@workspace/app": ["./workspace/app/"]
    },
    "removeComments": true,
    "resolveJsonModule": true,
    "sourceMap": true,
    "strict": true,
    "skipLibCheck": true,
    "target": "ES6"
  },
  "exclude": ["node_modules", "wokspace"],
  "extends": "expo/tsconfig.base",
  "include": ["workspace/**/src/*"],
  "references": [
    { "path": "./packages/expo" },
    { "path": "./packages/ink" },
    { "path": "./packages/electron" },
    { "path": "./packages/app" }
  ]
}
