{
  "compilerOptions": {
    "allowJs": false,
    "allowSyntheticDefaultImports": true,
    "baseUrl": "./",
    "declaration": true,
    "declarationMap": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "jsx": "react-native",
    "lib": ["dom", "es7"],
    "module": "es2015",
    "moduleResolution": "node",
    "noImplicitAny": false,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "paths": {
      "/": ["./"],
      "src": ["./src"],
      "test-utils": ["./config/test/test-utils.tsx"]
    },
    "removeComments": true,
    "resolveJsonModule": true,
    "sourceMap": true,
    "strict": true,
    "skipLibCheck": true,
    "target": "ES2018"
  },
  "exclude": ["node_modules"],
  "extends": "expo/tsconfig.base",
  "include": ["src", "./app.config.ts", "./App.tsx"]
}
