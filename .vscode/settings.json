{
  "diffEditor.ignoreTrimWhitespace": false,
  "editor.acceptSuggestionOnEnter": "smart",
  "editor.accessibilitySupport": "off",
  "editor.bracketPairColorization.enabled": false,
  "editor.codeActionsOnSave": {
    "source.fixAll": true
    //    "source.fixAll": true
  },
  "editor.cursorSurroundingLines": 2,
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "editor.fontFamily": "'Fira Code', Hack, 'MesloLGS NF', monospace",
  "editor.fontLigatures": true,
  "editor.formatOnSave": true,
  "editor.guides.bracketPairs": true,
  "editor.inlineSuggest.enabled": true,
  "editor.linkedEditing": true,
  "editor.minimap.maxColumn": 50,
  "editor.minimap.renderCharacters": false,
  "editor.minimap.showSlider": "always",
  "editor.multiCursorModifier": "alt",
  "editor.suggestSelection": "first",
  "editor.tabSize": 2,
  "editor.wordWrap": "off",
  "editor.wrappingIndent": "deepIndent",
  "explorer.confirmDelete": false,
  "explorer.confirmDragAndDrop": false,
  "files.exclude": {
    "**/.classpath": true,
    "**/.factorypath": true,
    "**/.project": true,
    "**/.settings": true
  },
  "git-graph.commitDetailsView.location": "Docked to Bottom",
  "git-graph.date.format": "ISO Date & Time",
  "git.allowForcePush": true,
  "git.autofetch": true,
  //  "gitPrefix.pattern": "\\w*?/?([A-Z0-9]{1,10}-\\d{1,4}).*",
  "javascript.validate.enable": true,
  "json.schemas": [],
  "markdown.extension.tableFormatter.normalizeIndentation": true,
  "npm.packageManager": "npm",
  "sortJSON.contextMenu": {
    "sortJSON": true,
    "sortJSONAlphaNum": false,
    "sortJSONAlphaNumReverse": false,
    "sortJSONKeyLength": false,
    "sortJSONKeyLengthReverse": false,
    "sortJSONReverse": false,
    "sortJSONType": false,
    "sortJSONTypeReverse": false,
    "sortJSONValues": false,
    "sortJSONValuesReverse": false
  },
  "spotify.showSignOutButton": false,
  "spotify.statusCheckInterval": 30000,
  "spotify.trackInfoFormat": "trackName",
  "svg.preview.mode": "svg",

  "terminal.integrated.cursorBlinking": true,

  "terminal.integrated.defaultLocation": "editor",
  "terminal.integrated.defaultProfile.osx": "zsh",
  "terminal.integrated.fontFamily": "MesloLGS NF",
  "terminal.integrated.fontWeight": "normal",
  "terminal.integrated.rightClickBehavior": "copyPaste",
  "thunder-client.codeSnippetLanguage": "js-fetch",
  "todo-tree.general.tags": [
    "BUG", // unknown bug
    "TOFIX", // known bug unfixed
    "TODO", // something to be done
    "TOTEST" // something done untested
  ],
  "todo-tree.highlights.customHighlight": {
    "TOFIX": {
      "icon": "flame"
    }
  },
  "todo-tree.highlights.defaultHighlight": {
    "background": "#0000",
    "foreground": "#dd0"
  },
  "todo-tree.regex.regex": "(('|//|#|<!--|;|/\\*|^)\\s*($TAGS)|^\\s*- \\[ \\])",
  "todo-tree.tree.showCountsInTree": true,
  "VSCodeCounter.exclude": ["**/.gitignore", "**/.vscode/**", "**/node_modules/**", "android/**", "ios/**"]
}
