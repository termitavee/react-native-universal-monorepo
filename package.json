{
  "name": "react-native-universal-monorepo",
  "version": "0.0.1",
  "scripts": {
    "test": "npm run test --workspaces --if-present",
    "start:expo": "npm run start -w @unified/expo",
    "start:expo:android": "npm run start:android -w @unified/expo",
    "start:expo:ios": "npm run start:ios -w @unified/expo",
    "start:expo:web": "npm run start:web -w @unified/expo",
    "start:electron": "npm run start -w @unified/electron",
    "run:electron": "npm run run -w @unified/electron",
    "start:ink": "npm run start -w @standalone/ink",
    "typecheck": "npm run typecheck --workspaces --if-present",
    "lint": "npm run lint --workspaces --if-present",
    "lint:silent": "npm run lint:silent --workspaces --if-present"
  },
  "description": "boilerplate monorepo that uses react native to build all possible platforms",
  "main": "index.js",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/termitavee/react-native-universal-monorepo.git"
  },
  "private": true,
  "author": "Termitavee",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/termitavee/react-native-universal-monorepo/issues"
  },
  "homepage": "https://github.com/termitavee/react-native-universal-monorepo#readme",
  "workspaces": [
    "app",
    "src",
    "standalone/*",
    "unified/*"
  ],
  "dependencies": {},
  "devDependencies": {
    "@types/react": "^18.2.21",
    "@types/react-dom": "^18.2.7",
    "@types/react-native": "^0.72.2",
    "@typescript-eslint/eslint-plugin": "^6.7.0",
    "@typescript-eslint/parser": "^6.7.0",
    "eslint": "^8.49.0",
    "eslint-config-airbnb": "^19.0.4",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-import": "^2.25.3",
    "eslint-plugin-jest": "^27.4.0",
    "eslint-plugin-jsx-a11y": "^6.5.1",
    "eslint-plugin-prettier": "^5.0.0",
    "eslint-plugin-react": "^7.28.0",
    "eslint-plugin-react-hooks": "^4.3.0",
    "ink": "^4.4.1",
    "typescript": "^4.2.0"
  }
}
